diff --git a/build/build.xml b/build/build.xml
index fa2ebbf..5ffd678 100644
--- a/build/build.xml
+++ b/build/build.xml
@@ -659,6 +659,13 @@
         </module-def>
         -->
 
+        <module-def name="org.hibernate" slot="3">
+            <maven-resource group="org.hibernate" artifact="hibernate-core" />
